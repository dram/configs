caption always "%{= Gk} %-Lw%{= kW}%n*%f %t%{= Gk}%+Lw %="
sorendition +b kG

escape "^Jj"
startup_message off
vbell off
altscreen on

bind , eval 'title ""' title
bind l other
defscrollback 5000

# allow bold colors
attrcolor b ".I"
# erase background with current bg color
defbce "on"

shelltitle "% |:"
