!! XFT settings
Xft.dpi:	98
Xft.antialias:	true
Xft.rgba:	rgb
Xft.hinting:	true
Xft.autohint:	true
Xft.hintstyle:	hintslight
Xft.lcdfilter:	lcddefault

Emacs*useXIM: false

!! Terminal colors
! Black
URxvt.color0: #000000
URxvt.color8: #555555
! Red
URxvt.color1: #CC0000
URxvt.color9: #FF5555
! Green
URxvt.color2: #00CC00
URxvt.color10: #55FF55
! Yellow
URxvt.color3: #CC6600
URxvt.color11: #FFFF55
! Blue
URxvt.color4: #0000CC
URxvt.color12: #5555FF
! Magenta
URxvt.color5: #CC00CC
URxvt.color13: #FF55FF
! Cyan
URxvt.color6: #00CCCC
URxvt.color14: #55FFFF
! White
URxvt.color7: #CCCCCC
URxvt.color15: #FFFFFF

!! rxvt-unicode settings
URxvt.geometry: 80x33
URxvt.font: xft:Liberation Mono:pixelsize=14
URxvt.scrollBar: false
URxvt.perl-ext-common: default,tabbedex,clipboard
URxvt.tabbed.new-button: no
URxvt.tabbed.tabbar-fg: 8
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    3
URxvt.tabbed.tab-bg:    0
URxvt.preeditType: Root

URxvt.letterSpace: -1

URxvt.foreground: #BBBBBB
URxvt.background: #000000

!xterm*faceName: Meslo LG M
xterm*geometry: 80x30
xterm*allowBoldFonts: false
xterm*faceName: Source Code Pro:pixelsize=15
xterm*faceNameDoublesize: Source Han Sans CN:style=Medium:pixelsize=15

xterm*scrollBar: off
xterm*iconHint: /usr/share/icons/Faenza/apps/48/terminal.xpm
xterm*charClass: 35:48,37-38:48,45-47:48,58:48,61:48,63:48
xterm*metaSendsEscape: true

! Linux console color, code from KDE Konsole
! https://projects.kde.org/projects/kde/applications/konsole/repository/revisions/master/changes/data/color-schemes/Linux.colorscheme

xterm*foreground: #B2B2B2
xterm*background: #000000

xterm*color0: #000000
xterm*color8: #686868

xterm*color1: #B21818
xterm*color9: #FF5454

xterm*color2: #18B218
xterm*color10: #54FF54

xterm*color3: #B26818
xterm*color11: #FFFF54

xterm*color4: #1818B2
xterm*color12: #5454FF

xterm*color5: #B218B2
xterm*color13: #FF54FF

xterm*color6: #18B2B2
xterm*color14: #54FFFF

xterm*color7: #B2B2B2
xterm*color15: #FFFFFF

xterm*colorBDMode: true
xterm*colorBD: white
xterm*colorULMode: true
xterm*colorUL: cyan
