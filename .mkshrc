#!/bin/mksh

# .mkshrc

export PATH=$PATH:/sbin:/usr/sbin:$HOME/bin

case "$-" in *i*)
	# interative mode settings

	HISTFILE=$HOME/.mksh_history

	export EDITOR=vi
	export LESS_TERMCAP_md='[36m'
	export PAGER='less -M +p'

	PS1='[32m${PWD/#$HOME/~}[31m${?/#0/}[0m
$ '

	alias ls='ls -F'

	;;
esac

# vim:ft=sh
